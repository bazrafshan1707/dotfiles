#!/usr/bin/bash
#
# Build my notes into a pdf file

usage() {
	echo "Usage: $0 -t title [path]"
}

while getopts "t:" opt; do
	case "$opt" in
		t)
			title="$OPTARG"
			;;
		*)
			usage
			exit 1
			;;
	esac
done

if [[ -z "$title" ]]; then
	usage
	exit 1
fi

shift $((OPTIND-1))

if [[ "$1" ]]; then
	path=$(realpath "$1")
else
	path=$(realpath ".")
fi

if [[ ! -d "$path" ]]; then
	echo "Error: $path is not a valid directory."
	exit 1
fi

output=$path/output.pdf

pandoc --toc -V documentclass=report --file-scope --metadata title="$title" "$path"/*.md -o "$output"

echo "$output is built."
