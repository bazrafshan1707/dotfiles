#!/usr/bin/sh
#
# Install some useful packages

pkgs=(
	"networkmanager"
	"vim"
	"sudo"
	"xorg"
	"xorg-xinit"
	"i3"
	"dmenu"
	"gnome-terminal"
	"thunar"
	"android-file-transfer"
	"bluez"
	"bluez-utils"
	"pipewire-pulse"
	"git"
	"udisks2"
	"lxappearance"
	"gnome-themes-extra"
	"ttf-dejavu"
)

pacman -Syu --noconfirm
for pkg in ${pkgs[@]}; do
	pacman -S --noconfirm --needed ${pkg}
done
