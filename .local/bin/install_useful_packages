#!/usr/bin/sh
#
# Install some useful packages

set -e

prepare() {
	sudo -k
	temp_dir=$(mktemp -d)
}

cleanup() {
	rm -rf $temp_dir
}

prepare
trap cleanup EXIT

pkgs=(
	"base-devel"
	"networkmanager"
	"vim"
	"sudo"
	"xorg"
	"xorg-xinit"
	"i3"
	"dmenu"
	"gnome-terminal"
	"thunar"
	"android-file-transfer"
	"bluez"
	"bluez-utils"
	"pipewire-pulse"
	"git"
	"udisks2"
	"lxappearance"
	"gnome-themes-extra"
	"ttf-dejavu"
	"ripgrep"
)

sudo pacman -Syu --noconfirm
for pkg in ${pkgs[@]}; do
	sudo pacman -S --noconfirm --needed ${pkg}
done

# Install paru
cd $temp_dir
git clone https://aur.archlinux.org/paru.git
cd paru
makepkg -si

echo "Installation completed."
