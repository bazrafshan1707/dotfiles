set backspace=indent,eol,start
set splitbelow splitright
set background=dark
set termguicolors

syntax enable

au BufEnter todo.md setlocal foldminlines=0
au BufEnter todo.md setlocal foldmethod=indent
au VimEnter * ++nested colorscheme gruvbox

let g:netrw_liststyle = 3

" Plugins
call plug#begin()

Plug 'tpope/vim-surround'
Plug 'morhetz/gruvbox'

call plug#end()
